const int height=10, width=30;
	 for (int i = 0, j = 0; ; i++)
            {
               	dc.Rectangle ( (1000 + width * i - (width / 2 * j)),(400 + height * j), (1030 + width * i - (width / 2 * j)),(410 + height * j));//1
                          //300 + width * i - (width / 2 * j),//x
                          //10 + height * j,//y
                          
                if (i == 6) break;
                if (i != j) continue;
                i =-1;
                j++;


	   }
}
